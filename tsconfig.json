{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es6",
    "lib": ["dom", "esnext"],
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports" : true,
    "charset": "utf8",
    "inlineSourceMap": false,
    "strictFunctionTypes": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "outDir": "./build"
  },
  "files": [
    "src/theme/theme.d.ts"
  ],
  "include": [
    "src/**/*",
  ],
  "exclude": ["node_modules"]
}
